{
    "languageserver": {
        "bash": {
          "command": "bash-language-server",
          "args": ["start"],
          "filetypes": ["sh"],
          "ignoredRootPaths": ["~"]
        },
        "dockerfile": {
          "command": "docker-langserver",
          "filetypes": ["dockerfile"],
          "args": ["--stdio"]
        },
        "rust": {
          "command": "ra_lsp_server",
          "filetypes": ["rust"],
          "rootPatterns": ["Cargo.toml"]
        },
        "cmake": {
          "command": "cmake-language-server",
          "filetypes": ["cmake"],
          "rootPatterns": [
            "build/"
          ],
          "initializationOptions": {
            "buildDirectory": "build"
          }
        }
    },
    "suggest.autoTrigger": "trigger",
    "jedi.executable.command": "jedi-language-server",
    "clangd.path": "/home/bbrisset/.config/coc/extensions/coc-clangd-data/install/12.0.0/clangd_12.0.0/bin/clangd",
    "clangd.semanticHighlighting": true,
    "clangd.disableDiagnostics": false,
    "clangd.disableCompletion": false,

    "pyright.enable": true,
    "python.formatting.provider": "black",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs":["--ignore-missing-imports","--follow-imports=silent","--show-column-numbers"], 

    "java.home": "/usr/lib/jvm/java-11-openjdk-amd64"
}

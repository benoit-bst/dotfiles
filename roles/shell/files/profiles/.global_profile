#----------------------
# Git grep
#----------------------
git-grep(){
    git grep -i $1 $(git rev-list --all)
}
git-log-file(){
    git log -p -- $1
}


#----------------------
# Replace
#----------------------
replace(){
    find $1 -type f -exec sed -i "s/$2/$3/g" {} \;
}

#----------------------
# Nmap
#----------------------
hard_nmap(){
    sudo nmap -v -A -T4 -Pn -p- $1
}
soft_nmap(){
    sudo nmap -v -sS -sU $1
}

#----------------------
# GPG
#----------------------
gpg_encryt ()
{
    gpg --output $1.data --symmetric --cipher-algo AES256 $1
}

gpg_decrypt ()
{
    output_name="$(echo $1 | cut --delimiter='.' -f1)"
    gpg --output $output_name --decrypt $1
}

# archive extractor
ar_extractor ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1   ;;
      *.tar.gz)    tar xzf $1   ;;
      *.bz2)       bunzip2 $1   ;;
      *.rar)       unrar x $1     ;;
      *.gz)        gunzip $1    ;;
      *.tar)       tar xf $1    ;;
      *.tbz2)      tar xjf $1   ;;
      *.tgz)       tar xzf $1   ;;
      *.zip)       unzip $1     ;;
      *.Z)         uncompress $1;;
      *.7z)        7z x $1      ;;
      *)           echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}

